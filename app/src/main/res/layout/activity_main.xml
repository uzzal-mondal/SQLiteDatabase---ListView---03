<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#1b5b46"
    tools:context=".MainActivity">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">



       <EditText
           android:id="@+id/editTextUserId_id"
           android:hint="User id"
           android:textColor="#ffffff"
           android:textColorHint="#b7a7a7"
           android:textSize="22sp"
           android:textStyle="bold"
           android:layout_margin="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />


       <EditText
           android:id="@+id/editTextUserName_id"
           android:hint="User Name"
           android:textColor="#ffffff"
           android:textColorHint="#b7a7a7"
           android:textSize="22sp"
           android:textStyle="bold"
           android:layout_margin="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

   </LinearLayout>
    <Button
        android:id="@+id/buttonSave_id"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonShow_id"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Show"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonUpdate_id"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Update"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonDelete_id"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Delete"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

</LinearLayout>